{
    "manifest_version": 3,
    "name": "GutCheck",
    "description": "A human-run misinformation reporter",
    "version": "1.0",
    "action": {
      "default_popup": "index.html"
    },

    "host_permissions": ["http://127.0.0.1:8000/"],

    "background": {
      "service_worker": "background.js"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],

    "permissions": ["scripting", "cookies", "tabs", "activeTab"]
}